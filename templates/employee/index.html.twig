{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}
    <h1>Employee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Adress</th>
                <th>Iban</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.id }}</td>
                <td>{{ employee.Firstname }}</td>
                <td>{{ employee.Lastname }}</td>
                <td>{{ employee.adress }}</td>
                <td>{{ employee.iban }}</td>
                <td>
                    <a class="btn btn-primary white" href="{{ path('employee_show', {'id': employee.id}) }}">show</a>
                    <a class="btn btn-primary white" href="{{ path('employee_edit', {'id': employee.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary white" href="{{ path('employee_new') }}">Create new</a>
{% endblock %}
